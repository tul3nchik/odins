&НаСервере
Процедура Команда2НаСервере()

	 Документ = новый ТекстовыйДокумент;
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	Справочник1.Наименование КАК Наименование,
		|	Справочник1.Код КАК Код
		|ИЗ
		|	Справочник.Справочник1 КАК Справочник1";
	
	РезультатЗапроса = Запрос.Выполнить();
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	
	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		// Вставить обработку выборки ВыборкаДетальныеЗаписи
		Документ.ДобавитьСтроку( ВыборкаДетальныеЗаписи.Код + ";" +ВыборкаДетальныеЗаписи.Наименование + ";");
	КонецЦикла;
	 Документ.Записать("E:\Новая папка\11.txt");


