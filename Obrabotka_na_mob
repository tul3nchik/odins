&НаСервере
Процедура Команда1НаСервере()
	Попытка
	// Вставить содержимое обработчика.
	Запрос = Новый HTTPЗапрос("/hs/price/get");
	Подключение = Новый HTTPСоединение("192.168.0.1/InfoBase24"); //ip пк и имя публикации
	Ответ = Подключение.Получить(Запрос);
	Строка = Ответ.ПолучитьТелоКакСтроку();
	Икс = XMLЗначение(Тип("ХранилищеЗначения"),Строка);
	Прайс = Икс.Получить();
	Для каждого Стр Из Прайс Цикл
		
		Спрв =  Справочники.Цветы.СоздатьЭлемент();
		Спрв.Код = Стр.Код ;
		Спрв.Наименование = Стр.Наименование ;
		Спрв.Статус = Стр.Статус ;
		Спрв.Изготовитель = Стр.Изготовитель ;
		
		Спрв.Записать();
		
	КонецЦикла;
	
Исключение 
	 Сообщить(ОписаниеОшибки());
	КонецПопытки;
КонецПроцедуры

&НаКлиенте
Процедура Команда1(Команда)
	Команда1НаСервере();
